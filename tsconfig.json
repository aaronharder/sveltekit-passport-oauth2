{
	"compilerOptions": {
		"outDir": "./lib/esm",
		"module": "ES2020",
		"target": "ES2015",
		"moduleResolution": "node",
		"declaration": true,
		"importsNotUsedAsValues": "error",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts"]
}
